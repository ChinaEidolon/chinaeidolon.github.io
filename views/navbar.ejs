<!DOCTYPE html>
<html>
<head>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
    <!-- Navigation Bar -->
    <nav class="bg-white shadow-lg">
        <div class="max-w-6xl mx-auto px-4">
            <div class="flex justify-between items-center">
                <!-- Website Logo -->
                <a href="/" class="flex items-center py-4 space-x-4">
                    <img src='https://media.licdn.com/dms/image/v2/D560BAQF_288xLivZgw/company-logo_200_200/company-logo_200_200/0/1737159412664/golden_travels_logo?e=1746057600&v=beta&t=W7nOrpTnz-qHailuPJEXwfAe_Ef_9cJJ7IFaWX3GeIk' class="h-8 w-8">
                    <span class="font-semibold text-gray-500 text-lg">Golden Travels</span>
                </a>

                <!-- Primary Navbar items -->
                <div class="hidden md:flex items-center space-x-6">
                    <a href="/" class="py-4 px-2 text-gray-500 font-semibold hover:text-yellow-500 transition duration-300 <%= (typeof page !== 'undefined' && page === 'home') ? 'text-yellow-500 border-b-4 border-yellow-500' : '' %>">Home</a>
                    <a href="/about" class="py-4 px-2 text-gray-500 font-semibold hover:text-yellow-500 transition duration-300 <%= (typeof page !== 'undefined' && page === 'about') ? 'text-yellow-500 border-b-4 border-yellow-500' : '' %>">About</a>
                    <a href="/connect" class="py-4 px-2 text-gray-500 font-semibold hover:text-yellow-500 transition duration-300 <%= (typeof page !== 'undefined' && page === 'connect') ? 'text-yellow-500 border-b-4 border-yellow-500' : '' %>">Connect</a>
                </div>

                <!-- Mobile menu button -->
                <div class="md:hidden flex items-center">
                    <button class="outline-none mobile-menu-button">
                        <svg class="w-6 h-6 text-gray-500 hover:text-yellow-500"
                            fill="none"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            viewBox="0 0 24 24"
                            stroke="currentColor">
                            <path d="M4 6h16M4 12h16M4 18h16"></path>
                        </svg>
                    </button>
                </div>
            </div>
        </div>
        
        <!-- Mobile menu -->
        <div class="hidden mobile-menu">
            <ul class="">
                <li><a href="/" class="block text-sm px-2 py-4 hover:bg-yellow-50 transition duration-300 <%= (typeof page !== 'undefined' && page === 'home') ? 'text-yellow-500 bg-yellow-50' : '' %>">Home</a></li>
                <li><a href="/about" class="block text-sm px-2 py-4 hover:bg-yellow-50 transition duration-300 <%= (typeof page !== 'undefined' && page === 'about') ? 'text-yellow-500 bg-yellow-50' : '' %>">About</a></li>
                <li><a href="/connect" class="block text-sm px-2 py-4 hover:bg-yellow-50 transition duration-300 <%= (typeof page !== 'undefined' && page === 'connect') ? 'text-yellow-500 bg-yellow-50' : '' %>">Connect</a></li>
            </ul>
        </div>
    </nav>

    <script>
        const btn = document.querySelector("button.mobile-menu-button");
        const menu = document.querySelector(".mobile-menu");

        btn.addEventListener("click", () => {
            menu.classList.toggle("hidden");
        });
    </script>

    <!-- Main Content -->
    <body>

    </body>
</body>
</html>